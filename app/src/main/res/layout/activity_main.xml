<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9977"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/cb_coffe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkbox1"
        android:text="COFFEE"
        tools:text="plainCoffe"
        android:layout_alignBottom="@+id/etCoffe"
        android:layout_alignRight="@+id/tvItems"
        android:layout_alignEnd="@+id/tvItems" />

    <CheckBox
        android:id="@+id/cb_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkbox2"
        android:text="JAVA"
        tools:text="java"
        android:layout_below="@+id/cb_coffe"
        android:layout_alignLeft="@+id/cb_coffe"
        android:layout_alignStart="@+id/cb_coffe" />

    <CheckBox
        android:id="@+id/ck_expresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkbox3"
        android:text="EXPRESSO"
        tools:text="Expresso"
        android:layout_below="@+id/cb_java"
        android:layout_alignLeft="@+id/cb_java"
        android:layout_alignStart="@+id/cb_java"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COFFEE SHOP"
        android:textAllCaps="false"
        android:textColor="#99F499"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:text="COFFE SHOP"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etCoffe"
        android:layout_alignStart="@+id/etCoffe"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Order"
        android:text="Order"
        android:layout_below="@+id/etExpresso"
        android:layout_alignRight="@+id/ck_expresso"
        android:layout_alignEnd="@+id/ck_expresso"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Total"
        android:layout_below="@+id/tvChange"
        android:layout_alignLeft="@+id/tvChange"
        android:layout_alignStart="@+id/tvChange" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:text="NextOrder"
        android:onClick="next"
        android:layout_alignBaseline="@+id/btnOrder"
        android:layout_alignBottom="@+id/btnOrder"
        android:layout_toRightOf="@+id/btnOrder"
        android:layout_toEndOf="@+id/btnOrder" />

    <TextView
        android:id="@+id/tvOrder_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order number: 01"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/tvItems"
        android:layout_alignEnd="@+id/tvItems"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/etCoffe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="0"
        android:layout_below="@+id/tv_dis_item"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp" />

    <EditText
        android:id="@+id/etJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="0"
        android:layout_above="@+id/ck_expresso"
        android:layout_alignLeft="@+id/etCoffe"
        android:layout_alignStart="@+id/etCoffe" />

    <EditText
        android:id="@+id/etExpresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="0"
        android:layout_below="@+id/etJava"
        android:layout_alignLeft="@+id/etJava"
        android:layout_alignStart="@+id/etJava" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="textPersonName"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Amount"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tvChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Change:"
        android:layout_below="@+id/tvAmount"
        android:layout_alignLeft="@+id/tvAmount"
        android:layout_alignStart="@+id/tvAmount" />

    <TextView
        android:id="@+id/tvAmount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_above="@+id/tvChange"
        android:layout_alignLeft="@+id/tvChange1"
        android:layout_alignStart="@+id/tvChange1" />

    <TextView
        android:id="@+id/tvChange1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_alignBaseline="@+id/tvChange"
        android:layout_alignBottom="@+id/tvChange"
        android:layout_toRightOf="@+id/etCoffe"
        android:layout_toEndOf="@+id/etCoffe" />

    <TextView
        android:id="@+id/tvDis_Tot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_alignBaseline="@+id/tvTotal"
        android:layout_alignBottom="@+id/tvTotal"
        android:layout_alignLeft="@+id/tvChange1"
        android:layout_alignStart="@+id/tvChange1" />

    <TextView
        android:id="@+id/tvItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total items:"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvTotal"
        android:layout_alignLeft="@+id/tvTotal"
        android:layout_alignStart="@+id/tvTotal" />

    <TextView
        android:id="@+id/tv_dis_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:layout_alignBaseline="@+id/tvItems"
        android:layout_alignBottom="@+id/tvItems"
        android:layout_toRightOf="@+id/etCoffe"
        android:layout_toEndOf="@+id/etCoffe" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/coffee_1"

        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/etExpresso"
        android:layout_alignStart="@+id/etExpresso" />


</RelativeLayout>
